<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="jct" xsi:type="array">
                                                            <item name="component" xsi:type="string">Japan_Tax/js/view/checkout/summary/jct</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="excludingTaxMessage" xsi:type="string" translate="true">Excl. Tax</item>
                                                                <item name="includingTaxMessage" xsi:type="string" translate="true">Incl. Tax</item>
                                                                <item name="subExclJct10Title" xsi:type="string" translate="true">Subtotal Subject to 10% Tax</item>
                                                                <item name="subExclJct8Title" xsi:type="string" translate="true">Subtotal Subject to 8% Tax</item>
                                                                <item name="subInclJct10Title" xsi:type="string" translate="true">Subtotal Subject to 10% Tax (Incl. Tax)</item>
                                                                <item name="subInclJct8Title" xsi:type="string" translate="true">Subtotal Subject to 8% Tax (Incl. Tax)</item>
                                                                <item name="jct10Title" xsi:type="string" translate="true">10% Tax</item>
                                                                <item name="jct8Title" xsi:type="string" translate="true">8% Tax</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
